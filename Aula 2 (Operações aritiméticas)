void main() {
  
  //Operações aritiméticas
 
  int numero1 = 15;
  int numero2 = 7;
  
  
  print ('Variável número 1 vale = $numero1');
  print ('Variável número 2 vale = $numero2');
  
  // Soma (Adição)
  int soma = numero1 + numero2;
  
  print ('A Soma de do número 1 com o número 2 é $soma');
  
  
  // Subtração
   int subtracao = numero1 - numero2;
  
  print ('A subtracão de do número 1 com o número 2 é $subtracao');
  
  // Multipicação
  
  int multiplicacao = numero1 * numero2;
  
  print ('A Multiplicação de do número 1 com o número 2 é $multiplicacao');
  
  // Divisão > Usa-se o DOUBLE para quanquer resultado
  
  double divisao = numero1 / numero2;
  
  print ('A Divisão do número 1 com o número 2 é $divisao');
  
  
  // Divisão parte inteira no restante (usa-se o TIL)
  
  int divisaoParteInteira = numero1 ~/ numero2;
  
  print ('A Divisão com o resultado inteiro entre o número 1 com o número 2 é $divisaoParteInteira');
  
  // Resto da divisão usa-se %
  
  int restoDivisao = numero1 % numero2;
  
  print ('Resto da divisão entre o número 1 com o número 2 é $restoDivisao');
  
}
